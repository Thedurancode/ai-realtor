# ========================================
# AI REALTOR PLATFORM - ENVIRONMENT VARIABLES
# ========================================
# Copy this file to .env and fill in your API keys

# ----------------------------------------
# DATABASE
# ----------------------------------------
# PostgreSQL database connection string
DATABASE_URL=postgresql://user:password@localhost:5432/ai_realtor

# ----------------------------------------
# ANTHROPIC CLAUDE AI
# ----------------------------------------
# Primary AI for contract analysis, recaps, compliance
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-key-here

# ----------------------------------------
# GOOGLE PLACES API
# ----------------------------------------
# For address autocomplete and geocoding
# Get your key at: https://console.cloud.google.com/
GOOGLE_PLACES_API_KEY=your-google-places-api-key-here

# ----------------------------------------
# ZILLOW API
# ----------------------------------------
# For property data enrichment (Zestimates, photos, schools, etc.)
# Note: Zillow WebAPI is restricted - you may need a third-party provider
ZILLOW_API_KEY=your-zillow-api-key-here

# ----------------------------------------
# SKIP TRACE API
# ----------------------------------------
# For owner contact discovery (phone, email, mailing address)
# Provider examples: TLO, BatchSkipTracer, FindTheSeller
SKIP_TRACE_API_KEY=your-skip-trace-api-key-here

# ----------------------------------------
# DOCUSEAL
# ----------------------------------------
# For contract e-signatures
# Get your key at: https://docuseal.co/
DOCUSEAL_API_KEY=your-docuseal-api-key-here
DOCUSEAL_WEBHOOK_SECRET=your-webhook-secret-here
DOCUSEAL_BASE_URL=https://docuseal.co

# ----------------------------------------
# COMPOSIO (MCP TOOL MANAGEMENT)
# ----------------------------------------
# For MCP tool routing and management via Composio platform
# Get your key at: https://composio.dev/
COMPOSIO_API_KEY=your-composio-api-key-here
COMPOSIO_EXTERNAL_USER_ID=ai-realtor-agent

# ----------------------------------------
# VAPI (PHONE CALLS)
# ----------------------------------------
# For AI-powered phone calls
# Get your key at: https://vapi.ai/
VAPI_API_KEY=your-vapi-api-key-here
VAPI_PHONE_NUMBER=+14155551234

# ----------------------------------------
# TELNYX (VOICE & SMS API)
# ----------------------------------------
# Alternative to VAPI with more control
# Get your key at: https://telnyx.com/
# Create a Call Control App to get CONNECTION_ID
TELNYX_API_KEY=your-telnyx-api-key-here
TELNYX_CONNECTION_ID=your-telnyx-connection-id-here
TELNYX_PHONE_NUMBER=+14155551234
TELNYX_WEBHOOK_URL=https://your-domain.com/telnyx/webhook

# ----------------------------------------
# ELEVENLABS (VOICE SYNTHESIS)
# ----------------------------------------
# For text-to-speech in phone calls
# Get your key at: https://elevenlabs.io/
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here

# ----------------------------------------
# EXA API (RESEARCH)
# ----------------------------------------
# For agentic property research
# Get your key at: https://exa.ai/
EXA_API_KEY=your-exa-api-key-here

# ----------------------------------------
# ZUCKERBOT (FACEBOOK ADS)
# ----------------------------------------
# AI-powered Facebook ad campaign generation
# Get your key at: https://zuckerbot.ai/
ZUCKERBOT_API_KEY=zb_live_your-key-here

# ----------------------------------------
# META (FACEBOOK/INSTAGRAM ADS)
# ----------------------------------------
# For launching ads to Facebook Ads Manager
# Get your access token at: https://developers.facebook.com/
META_ACCESS_TOKEN=your-meta-access-token-here
META_AD_ACCOUNT_ID=act_1234567890

# ----------------------------------------
# POSTIZ (SOCIAL MEDIA)
# ----------------------------------------
# For multi-platform social media posting
# Get your API key from Postiz dashboard
POSTIZ_API_KEY=your-postiz-api-key-here
POSTIZ_BASE_URL=https://api.postiz.com

# ----------------------------------------
# VIDEOGEN (AI VIDEO GENERATION)
# ----------------------------------------
# For AI video generation from property data
# Get your API key at: https://videogen.com/
VIDEOGEN_API_KEY=your-videogen-api-key-here

# ----------------------------------------
# OPENAI (OPTIONAL - FOR VAPI CALLS)
# ----------------------------------------
# Used by VAPI for phone conversation AI
# Get your key at: https://platform.openai.com/
OPENAI_API_KEY=sk-your-openai-key-here

# ----------------------------------------
# FLY.IO (DEPLOYMENT)
# ----------------------------------------
# These are set automatically when deploying to Fly.io
# You don't need to set these locally
FLY_APP_NAME=ai-realtor
FLY_REGION=ord

# ----------------------------------------
# CORS (CROSS-ORIGIN RESOURCE SHARING)
# ----------------------------------------
# Comma-separated list of allowed origins for API access
# Leave empty for production, use http://localhost:3000 for local dev
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ----------------------------------------
# ENVIRONMENT
# ----------------------------------------
# Options: development, staging, production
ENVIRONMENT=development

# ----------------------------------------
# LOGGING
# ----------------------------------------
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ----------------------------------------
# WEBHOOK BASE URL
# ----------------------------------------
# Public URL where your app is deployed
# Used for DocuSeal webhooks and other callbacks
WEBHOOK_BASE_URL=https://ai-realtor.fly.dev
# For local development with ngrok:
# WEBHOOK_BASE_URL=https://your-ngrok-url.ngrok.io

# ----------------------------------------
# DAILY DIGEST SCHEDULE
# ----------------------------------------
# Time to send daily digest (24-hour format, UTC)
DAILY_DIGEST_HOUR=8
DAILY_DIGEST_MINUTE=0

# ----------------------------------------
# PIPELINE AUTOMATION
# ----------------------------------------
# Enable/disable automatic pipeline status transitions
PIPELINE_AUTOMATION_ENABLED=true
# How often to check for pipeline updates (in minutes)
PIPELINE_CHECK_INTERVAL=5

# ----------------------------------------
# TASK RUNNER
# ----------------------------------------
# How often to process scheduled tasks (in seconds)
TASK_RUNNER_INTERVAL=60

# ----------------------------------------
# OPTIONAL: TELEGRAM BOT
# ----------------------------------------
# For Telegram bot integration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
TELEGRAM_BOT_WEBHOOK_SECRET=your-webhook-secret-here

# ----------------------------------------
# OPTIONAL: REDIS (CACHING)
# ----------------------------------------
# For caching and job queues (optional)
REDIS_URL=redis://localhost:6379/0

# ----------------------------------------
# OPTIONAL: S3 / FILE STORAGE
# ----------------------------------------
# For storing documents, photos, videos
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=ai-realtor-documents
AWS_REGION=us-east-1

# ========================================
# MINIMUM REQUIRED FOR BASIC FUNCTIONALITY
# ========================================
# To get started with core features, you need:
#
# 1. DATABASE_URL - PostgreSQL database
# 2. ANTHROPIC_API_KEY - AI features
# 3. GOOGLE_PLACES_API_KEY - Address lookup
#
# ========================================
# FEATURE SPECIFIC REQUIREMENTS
# ========================================
#
# Property Enrichment:
#   - ZILLOW_API_KEY
#
# Skip Trace (Owner Discovery):
#   - SKIP_TRACE_API_KEY
#
# Contract E-Signatures:
#   - DOCUSEAL_API_KEY
#   - DOCUSEAL_WEBHOOK_SECRET
#
# Phone Calls:
#   - VAPI_API_KEY
#   - VAPI_PHONE_NUMBER
#   - ELEVENLABS_API_KEY (optional, for better voice)
#
# Research:
#   - EXA_API_KEY
#
# Facebook Ads:
#   - ZUCKERBOT_API_KEY (AI campaign generation)
#   - META_ACCESS_TOKEN (launch to Facebook)
#   - META_AD_ACCOUNT_ID
#
# Social Media:
#   - POSTIZ_API_KEY
#
# Video Generation:
#   - VIDEOGEN_API_KEY
#
# Customer Portal (NEW):
#   - PORTAL_JWT_SECRET - Secret key for portal JWT tokens
#
# Document AI Extraction (NEW):
#   - ANTHROPIC_API_KEY (already required)
#   - Tesseract OCR (system dependency)
#   - AWS_REGION (optional, for AWS Textract)
#

# ----------------------------------------
# REMOTION RENDERING
# ----------------------------------------
# For async video rendering with Remotion
# Redis for job queue
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Worker concurrency (number of parallel renders)
WORKER_CONCURRENCY=1

# AWS S3 for video storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=ai-realtor-renders
